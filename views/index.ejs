<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/styles.css">
    <script src="https://kit.fontawesome.com/3bfaead41e.js" crossorigin="anonymous"></script>
    <title>Flights</title>
  </head>
  <body>
    <main class="main-div">
      <div class="container-fluid">
        <div class="row">
          <div class="col-2"></div>
          <div class="col-8">

            <div class="d-flex justify-content-between">
                <div>
                  <h1>All Flights</h1>
                </div>
                <div class="d-flex align-items-center">
                  <a type="button" class="btn btn-success me-2" href="/new_flight">Add new flight</a>
                  <a type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#filterModal" >Filter by price</a>
              </div>
            </div>

            <%- include('partials/table'); %>

            <% if (Object.keys(dbValues).length == 0) { %>
                <div class="no-flights">
                    <p>No flights in database. Clic the "Add new flight" button.</p>
                </div>
            <% }; %>

            <!-- Modal -->
            <div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="modalLabel">Filter flights</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <form action="/filtered" method="post">                  
                    <div class="modal-body">
                      <label>Insert maximum price:</label><br />
                      <div class="input-group">
                      <span class="input-group-text">$</span>
                      <input
                      type="number"
                      class="form-control"
                      name="maxPrice"
                      min="1"
                      max="9999"
                      required
                    /><br />
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                      <input type="submit" class="btn btn-primary" value="submit"></button>
                    </div>
                  </form>
                </div>
              </div>
            </div>


          </div>
          <div class="col-2"></div>
        </div>
      </div>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
